<h1>Escape to your own private planet with our out-of-this-world experience!</h1>

<% if current_user %>
<%= current_user.email %>
<%= link_to 'Edit Account', edit_user_registration_path %>
<%= button_to "Logout", destroy_user_session_path, date: {turbo: "false"}, method: :delete %>
<% else  %>
<%= link_to "Login", new_user_session_path %>
<%= link_to "Create Account", new_user_registration_path %>
<% end %>

<%= link_to "new planet ", new_planet_path %>



<% @planets.each do |planet| %>
<div class="card">
  <div class="title">
    <h3><%= link_to planet.name, planet_path(planet) %></h3>
  </div>
  <div class="catch">

  </div>
  <div class="image">
    <% if planet.photos.attached? %>
      <% planet.photos.each do |photo| %>
        <%=  image_tag cl_image_path(photo.key, height: 300, crop: :fill)%>
        <% end %>
    <% else %>
      <%=  image_tag asset_path( 'default-planet.jpg') %>
    <% end %>
  </div>
  <div class="content">
    <p><%= planet.summary %></p>
  </div>
  <div class="footer">
  </div>
</div>
<% end %>
