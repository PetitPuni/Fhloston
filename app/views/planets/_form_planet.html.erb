<%= simple_form_for(planet) do |f| %>
<%= f.input :name, error: 'Planet name is mandatory, please specify one.', placeholder: 'Milky Way' %>
<%= f.input :catch_phrase, error: 'A catch phrase is mandatory, please specify one.', placeholder: 'Experience our out of this world lodge in Centaurus.'  %>
<%= f.input :summary, error: 'A summary of your rental is mandatory, please specify one.', placeholder: 'This fully furnished, modern home boasts panoramic views of an otherworldly landscape and is equipped with all the amenities you need for a comfortable stay.' %>
<%= f.input :planet_type, collection: ['Carbon planet', 'Gas dwarf', 'Desert planet', 'Gas giant', 'Helium planet', 'Ice giant', 'Iron planet', 'Lava planet'], prompt: 'Select a type' %>
<%= f.input :inhabitants, placeholder: 'Choose the number of inhabitants on your planet.' %>
<%= f.input :available_places, placeholder: 'Choose the number of available places on your planet.' %>
<%= f.input :location, collection: ["Triangulum", "Pinwheel", "Whirlpool", "Andromeda", "Centaurus A", "Milky Way", "Messier 83", "Hoags Object","Sunflower"], error: 'The location of your planet is mandatory, please specify one.', prompt: 'Select a location'%>
<%= f.input :price, placeholder: 'Choose a price for your rental', error: 'A summary of your rental is mandatory, please specify one.' %>
<%= f.input :photo, as: :file %>
<%= f.submit 'Add a new list', class: 'btn btn-success' %>
<% end %>
